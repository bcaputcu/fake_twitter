<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= content_for?(:title) ? yield(:title) : "FakeTwitter" %></title>
	<meta name="description" content="">
	<meta name="author" content="">
	<%= stylesheet_link_tag "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<%= yield(:head) %>
</head>
<body>
	<div class="container">
		<div class="navbar">
			<div class="navbar-inner">
				<div class="container">
					<ul class="nav">
						<li>
							<%= link_to "Home", "/home/index" %>
						</li>
						<% if user_signed_in? %>
						<li>
							<%= link_to "Users List", "/home/user_list" %>
						</li>
						<% end %>
					</ul>
					<%= render 'layouts/user_navigation' %>
				</div>
			</div>
		</div>
	</div>
	<div id="main" role="main">
		<div class="container">
			<div class="row">
				<div class="span7 center">
					<div class="well well-large">
						<div class="row">
							<div class="span7">
								<%= render 'layouts/messages' %>
								<%= yield %>
								<footer>
								</footer>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div> <!--! end of .container -->
	</div> <!--! end of #main -->

	<!-- <%= params.inspect %> -->

</body>
</html>